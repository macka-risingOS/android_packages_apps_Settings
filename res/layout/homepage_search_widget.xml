<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/compact_widgets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/homepage_title_margin_top"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/search_widget"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_bar_height"
                android:background="@drawable/custom_preference_background"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_gravity="start|center_vertical">

                    <ImageView
                        android:id="@+id/search_widget_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_homepage_search"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:tint="@color/settings_accent_color"
                        android:clickable="true"/>

                    <TextView
                        android:id="@+id/homepage_search_text"
                        android:textColor="@color/op_control_text_color_primary"
                        style="@style/op_control_text_style_h6"
                        android:textSize="18sp"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/search_widget_icon"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/avatar_widget_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="6dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/settings_accent_color"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:clickable="true" />

            </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
